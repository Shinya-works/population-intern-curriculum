<div class="container">
  <div clas="row">
    <% if user_signed_in? %> <!-- ユーザーがログインしているか調べる -->
      <%= link_to "ユーザー編集", edit_user_registration_path, class: "btn btn-secondary" %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-secondary" %> 
    <% else %>
      <!-- ユーザーがログインしていなかった時の処理 -->
      <h2> 現在ログインしていません </h2>
      <%= link_to "ログイン", new_user_session_path, class: 'post btn btn-secondary' %> 
      <%= link_to "新規登録", new_user_registration_path, class: 'post btn btn-secondary' %> 
    <% end %>
  </div>
</div>