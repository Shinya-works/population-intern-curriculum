<% provide(:item, "#{item}") %>
<% provide(:btn, "#{item}") %>
<div class="max_width_50">

  <h1 class="text-center"><%= t("#{item}.title") %></h1>

  <%= form_with(model: article, url: url, local: true) do |form| %>
    <% if article.errors.any? %>
      <div id="error_explanation">
        <h2><%= t("errors.messages.not_saved.other", count: article.errors.count) %></h2>

        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, class:"form-control" %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content, class:"form-control" %>
    </div>

    <div class="field">
      <%= form.label :photo %><br>
      <%= form.file_field :photo %>
    </div>

    <div class="actions text-center">
      <%= form.submit t("btn.#{btn}_btn"), class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to t("link.back"), user_articles_path %>
</div>